{
    "publisher": "jjssoftware",
    "name": "jjs-vscode-toolbar",
    "displayName": "jjs-vscode-toolbar",
    "description": "A VSCode Toolbar",
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "commands": [
            {
                "command": "quickbar.copy",
                "title": "Copy",
                "category": "QuickToolbarCommands",
                "icon": {
                    "dark": "./media/content-copy-light.svg",
                    "light": "./media/content-copy.svg"
                },
                "when": "editorHasSelection"
            },
            {
                "command": "quickbar.cut",
                "title": "Cut",
                "category": "QuickToolbarCommands",
                "icon": {
                    "dark": "./media/content-cut-light.svg",
                    "light": "./media/content-cut.svg"
                },
                "when": "editorHasSelection"
            },
            {
                "command": "quickbar.paste",
                "title": "Paste",
                "category": "QuickToolbarCommands",
                "icon": {
                    "dark": "./media/content-paste-light.svg",
                    "light": "./media/content-paste.svg"
                },
                "when": "editorHasSelection"
            },
            {
                "command": "quickbar.undo",
                "title": "Undo",
                "category": "QuickToolbarCommands",
                "icon": {
                    "dark": "./media/undo-light.svg",
                    "light": "./media/undo.svg"
                }
            },
            {
                "command": "quickbar.redo",
                "title": "Redo",
                "category": "QuickToolbarCommands",
                "icon": {
                    "dark": "./media/redo-light.svg",
                    "light": "./media/redo.svg"
                }
            },

            {
                "command": "quickbar.save",
                "title": "Save",
                "category": "QuickToolbarCommands",
                "icon": "$(save)"
            },
            {
                "command": "quickbar.upperCase",
                "title": "Uppercase",
                "category": "QuickToolbarCommands",
                "icon": {
                    "light": "./media/arrow_upward.svg",
                    "dark": "./media/arrow_upward_light.svg"
                }
            },
            {
                "command": "quickbar.lowerCase",
                "title": "Lowercase",
                "category": "QuickToolbarCommands",
                "icon": {
                    "light": "./media/arrow_downward.svg",
                    "dark": "./media/arrow_downward_light.svg"
                }
            },            
            {
                "command": "quickbar.trimWhitespace",
                "title": "Trim Whitespace",
                "category": "QuickToolbarCommands"
            }
        ],
        "menus": {
            "editor/title": [                
                {
                    "command": "quickbar.copy",                    
                    "group": "navigation@1"
                },
                {
                    "command": "quickbar.cut",                    
                    "group": "navigation@2"
                },
                {
                    "command": "quickbar.paste",                    
                    "group": "navigation@3"
                },
                {
                    "command": "quickbar.undo",
                    "alt": "quickbar.undo",
                    "group": "navigation@4"
                },
                {
                    "command": "quickbar.redo",
                    "alt": "quickbar.redo",
                    "group": "navigation@5"
                },
                {
                    "command": "quickbar.save",
                    "alt": "quickbar.save",
                    "group": "navigation@6"
                }                
            ],
            "editor/context": [                                
                {
                    "command": "quickbar.upperCase",
                    "group": "Group4@1"
                },
                {
                    "command": "quickbar.lowerCase",
                    "group": "Group4@2"
                },                                
                {
                    "command": "quickbar.trimWhitespace",
                    "group": "Group4@3"
                }
            ]
        }
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.45.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "homepage": "https://github.com/jjssoftware/jjs-vscode-toolbar",
    "repository": {
        "type": "git",
        "url": "https://github.com/jjssoftware/jjs-vscode-toolbar"
    }
}